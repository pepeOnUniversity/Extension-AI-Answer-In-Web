{
  "manifest_version": 3,
  "name": "AI Answer Assistant",
  "version": "1.0.0",
  "description": "Chụp màn hình câu hỏi và sử dụng AI để đưa ra đáp án",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://api.ocr.space/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["html2canvas.min.js", "tesseract.min.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Answer Assistant",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
